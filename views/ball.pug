extends layout

block content
  h1= title
  p Ball  results
  div(class="container-fluid")
        div(class="row")
            -
                let details = [
                    {
                        "bColor": "Blue",
                        "bShape": "Circle",
                        "bSize": 10
                    },
                    {
                        "bColor": "Red",
                        "bShape": "Circle",
                        "bSize": 20
                    },
                    {
                        "bColor": "White",
                        "bShape": "Circle",
                        "bSize": 15
                    },                   
                ]
            each b ,index in details
                div(class="col-sm-2" onclick=`buy(${index})`) #{b.bColor}
                div(class="col-sm-2" onclick=`buy(${index})`) #{b.bShape}
                div(class="col-sm-2" onclick=`buy(${index})`) #{b.bSize}

                script.                
                      function buy(itemNo)
                      {
                            alert(`You purchased item ${itemNo+1}`)
                      }